.container
  .d-flex.justify-content-center
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %h1.text-center Log in
      .form-group
        = f.email_field :email, class: 'form-control', id: 'login-input', placeholder: 'Email'
      .form-group
        = f.password_field :password, autocomplete: "off", class: 'form-control', id: 'login-pwd-input', placeholder: 'Password'
      - if devise_mapping.rememberable?
        .field.remember-me
          = f.check_box :remember_me
          = f.label :remember_me
      .actions.text-center
        = f.submit "Log in", class: 'btn btn-success'
      %br
      = render "devise/shared/links"
