.full-screen.container.d-flex.align-items-center.justify-content-center
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    %h1.text-center Log in
    .form-group
      = f.email_field :email, class: 'form-control', id: 'login-input', placeholder: 'Email'
    .form-group
      = f.password_field :password, autocomplete: "off", class: 'form-control', id: 'login-pwd-input', placeholder: 'Password'
    - if devise_mapping.rememberable?
      .field.remember-me
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit "Log in", class: 'btn btn-success w-100'
    %br
    .text-center
      = render "devise/shared/links"
