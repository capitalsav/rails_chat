.container
  .d-flex.align-items-center.justify-content-center.vh-100
    .form-border
      .d-flex.justify-content-center.mb-3
        %h4 Change your password
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = render "devise/shared/error_messages", resource: resource
        = f.hidden_field :reset_password_token
        .mb-3
          .d-flex.justify-content-center.mb-1
            = f.label :password, 'New password'
          - if @minimum_password_length
            .d-flex.justify-content-center.mt-1.mb-1
              = "#{@minimum_password_length} characters minimum"
          = f.password_field :password, class: 'form-control', autofocus: true, autocomplete: "off"
        .mb-3
          .d-flex.justify-content-center.mb-1
            = f.label :password_confirmation, "Confirm new password"
          = f.password_field :password_confirmation, class: 'form-control', autocomplete: "off"
        .mb-3.d-flex.justify-content-center
          = f.submit 'Change my password', class: 'btn btn-success w-100'
      .text-center.auth-links
        = render "devise/shared/links"
